<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:widgets="view.widgets.*"
		 width="100%" height="100%">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Metadata>
		[Event(name="timeStatsHelpLinkClicked", type="flash.events.Event")]
	</fx:Metadata>

	<fx:Script>
		<![CDATA[
			import model.QuestionsProxy;
			private const leftPaddingSpace:int = 20;
			private const centrePaddingSpace:int = 90;
			
			public function updateView(quesProxy:QuestionsProxy):void
			{
				total_ques.text = quesProxy.testResult.totalTimeTakenStr  + " sec";
				corr_ques.text = quesProxy.testResult.timeSpentOnCorrectQues.toString()+ " sec";
				wrong_ques.text = quesProxy.testResult.timeSpentOnIncorrectQues.toString()+ " sec";
				unattempted_ques.text = quesProxy.testResult.timeSpentOnUnansweredQues.toString()+ " sec";
				average_time.text = (quesProxy.testResult.totalTimeTakenVal/quesProxy.testResult.totalQuesAttempted).toString()+ " sec";
			}
			
		]]>
	</fx:Script>
	
	<s:Image 
		width="100%" height="100%"
		source="@Embed('assets/old-paper2.jpg')"
		smooth="true"
		smoothingQuality="high"
		scaleMode="stretch"
		/>
	
	<s:VGroup y="0" width="100%" height="100%" horizontalAlign="center" horizontalCenter="0"
			  paddingBottom="5" paddingTop="5"
			  verticalAlign="top">
		
		<s:Spacer height="5%"/>
		<s:Label top="30" color="#1E1F1E" fontSize="22" fontStyle="italic" fontWeight="bold"
				 horizontalCenter="-50" lineThrough="false" text="Time Statistics"
				 textDecoration="underline"/>
		<s:Spacer height="5%"/>
		
		<s:HGroup verticalAlign="top" width="100%">		
			<s:Spacer width="{leftPaddingSpace}"/>
			<s:RichText fontSize="15" fontStyle="italic" fontWeight="bold"
						text="Time Spent On " />
		</s:HGroup>
		
		<s:BorderContainer width="100%" backgroundAlpha="0.0" backgroundColor="#989696"
						   borderVisible="false" contentBackgroundAlpha="0.0"
						   contentBackgroundColor="#BA7575" horizontalCenter="0">

			<s:RichText left="{leftPaddingSpace}" top="20" fontSize="17" fontStyle="italic" fontWeight="bold"
						text="- All Questions :"/>
			<s:RichText left="{leftPaddingSpace}" top="60" fontSize="17" fontStyle="italic" fontWeight="bold"
						text="- Correct answers :"/>
			<s:RichText left="{leftPaddingSpace}" top="100" fontSize="17" fontStyle="italic" fontWeight="bold"
						text="- Wrong answers :"/>
			<s:RichText left="{leftPaddingSpace}" top="140" fontSize="17" fontStyle="italic" fontWeight="bold"
						text="- Unanswered questions :"/>
			<s:RichText left="{leftPaddingSpace}" top="200" fontSize="17" fontStyle="italic" fontWeight="bold"
						text="Average Time on each Ques :"/>
			
			<s:RichText id="total_ques" top="20" fontSize="17" fontStyle="italic" fontWeight="bold"
						horizontalCenter="{centrePaddingSpace}" text="sdsd"/>
			<s:RichText id="corr_ques" top="60" color="#1D7518" fontSize="17" fontStyle="italic"
						fontWeight="bold" horizontalCenter="{centrePaddingSpace}" text="sdsd"/>
			<s:RichText id="wrong_ques" top="100" color="#F31610" fontSize="17" fontStyle="italic"
						fontWeight="bold" horizontalCenter="{centrePaddingSpace}" text="sdsd"/>
			<s:RichText id="unattempted_ques" top="140" color="#F1FA67" fontSize="17" fontStyle="italic"
						fontWeight="bold" horizontalCenter="{centrePaddingSpace}" text="sdsd"/>
			<s:RichText id="average_time" top="200" color="#1480DB" fontSize="17" fontStyle="italic"
						fontWeight="bold" horizontalCenter="{centrePaddingSpace}" text="sdsd"/>
			
		</s:BorderContainer>
		
	</s:VGroup>
	<mx:LinkButton styleName="index" 
				   label="How will these numbers help me?" 
				   right="30" bottom="20" 
				   color="#349574" fontWeight="bold" 
				   fontStyle="italic" 
				   textDecoration="underline"
				   click="{dispatchEvent(new Event('timeStatsHelpLinkClicked'))}"
				    fontSize="14"/>
	
	
</s:Group>
