<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:components="view.components.*"
		 width="100%" height="100%" currentState="TestMode">
	
	<fx:Script>
		<![CDATA[
			protected function button1_clickHandler(event:MouseEvent):void
			{
				var cusEvent:Event = new Event("test_Completed");
				dispatchEvent(cusEvent);
				
			}
		]]>
	</fx:Script>
	<s:states>
		<s:State name="TestMode"/>
		<s:State name="ReviewMode"/>
	</s:states>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:layout>
		<s:BasicLayout>
			
		</s:BasicLayout>
	</s:layout>
	<s:BorderContainer left="10" top="10" bottom="10" width="78%">
		<components:ExplanationBar includeIn="ReviewMode" left="80" right="80" bottom="29"
								   height="20%" horizontalCenter="0">
		</components:ExplanationBar>
	</s:BorderContainer>
	<s:Panel right="6" top="10" bottom="10" width="20%">
		<s:Button  label="Done" click="button1_clickHandler(event)"
				  bottom="20" width="50%" height="5%"
				  horizontalCenter="0"
				  />
		
		<s:Button top="20" width="50%" height="5%" label="Help" horizontalCenter="0"
				   click="currentState = 'ReviewMode' "/>
		<components:questionsButtBox top="65" width="90%" height="20%"
									 horizontalCenter="0">
		</components:questionsButtBox>
		<s:BorderContainer includeIn="TestMode" width="60%" height="5%" horizontalCenter="0"
						   verticalCenter="80">
		</s:BorderContainer>
	</s:Panel>
</s:Group>
