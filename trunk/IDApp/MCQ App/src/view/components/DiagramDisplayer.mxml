<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
			
			private var _imagePath:String = "";

			public function setImage(imagePath:String):void
			{
				_imagePath = imagePath;
				diagImage.source = imagePath;
			}
			
			protected function diagImage_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				var diagOverlay:DetailOverlay = new DetailOverlay();
				diagOverlay.currentState = "ImageState";
				diagOverlay.percentHeight = 60;
				diagOverlay.percentWidth = 60;
				diagOverlay.imagePath = _imagePath;
				
				PopUpManager.addPopUp(diagOverlay, this);
				PopUpManager.centerPopUp(diagOverlay);
				
			}
			
		]]>
	</fx:Script>
	
	
	<s:Image id="diagImage" width="90%" height="90%" backgroundAlpha="0.93" backgroundColor="#998383"
			 chromeColor="#F5B8B8" click="diagImage_clickHandler(event)" horizontalCenter="0"
			 scaleMode="stretch" smooth="true" smoothingQuality="high" verticalCenter="0"/>
</s:BorderContainer>
