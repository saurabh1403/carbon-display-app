<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   xmlns:mx="library://ns.adobe.com/flex/mx"
				   borderAlpha="0.61" borderColor="#2A2A2A" 
				   borderWeight="8" cornerRadius="15"
				   dropShadowVisible="true">

	<s:layout>
		<s:BasicLayout/>
	</s:layout>

	<fx:Script>
		<![CDATA[

			public var explanationString:String = "Explanation \n";

			[Bindable]
			public var explanationText:String = "";

		]]>
	</fx:Script>

	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:states>
		<s:State name="collapsed"/>
		<s:State name="expanded"/>
	</s:states>

	<s:TextArea width="100%" height="100%" chromeColor="#FCF8F8" color="#767474" editable="false"
				fontFamily="Verdana" fontSize="13" horizontalCenter="0" paddingBottom="10"
				paddingLeft="10" paddingRight="10" paddingTop="10" selectable="false"
				text="{explanationString + explanationText}" verticalCenter="0"
				horizontalScrollPolicy.collapsed="off" textAlign="left"
				verticalScrollPolicy.collapsed="off"/>
</s:BorderContainer>
