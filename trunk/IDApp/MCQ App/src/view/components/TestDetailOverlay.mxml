<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:fx="http://ns.adobe.com/mxml/2009"
		   xmlns:s="library://ns.adobe.com/flex/spark"
		   xmlns:mx="library://ns.adobe.com/flex/mx"
		   backgroundColor="0x333333" borderColor="#172D3B" borderVisible="true"
		   contentBackgroundAlpha="0.71" contentBackgroundColor="#F2D7D7"
		   creationCompleteEffect="Fade" dropShadowVisible="true" hideEffect="Fade">
	
	<fx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
			
			[Bindable]
			private var _overlayText:String;
			
			protected function button1_clickHandler(event:MouseEvent):void
			{
				PopUpManager.removePopUp(this);				
			}
			
			public function set overlayText(inText:String):void
			{
				_overlayText = inText;
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:RichText width="95%" height="80%" fontFamily="Verdana" fontSize="28" fontWeight="normal"
				horizontalCenter="0" textAlign="center"
				verticalAlign="middle" verticalCenter="-20" text="{_overlayText}"/>
	<s:Button bottom="10" width="12%" height="7%" label="Button" click="button1_clickHandler(event)"
			  horizontalCenter="0"/>
	
	
</mx:Canvas>
