<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%">

	<fx:Metadata>
		[Event(name="nextPageClicked", type="flash.events.Event")]
		[Event(name="performanceImproveLinkClicked", type="flash.events.Event")]
	</fx:Metadata>

	<fx:Script>
		<![CDATA[
			[Bindable]
			public var performanceLevel:int = 2;		//1: high, 2: avergae, 3: low 
			
			[Bindable]
			public var finalPerformanceColor:int = 0x47B56F;
		]]>
	</fx:Script>
	
	<s:Image 
		width="100%"
		height="100%"
		source="@Embed('assets/assetsMCQModule/Book-Cover.jpg')"
			 scaleMode="stretch"
			 >
	</s:Image>
	
	<s:BorderContainer id="performanceBar" width="75%" height="5%"
					   borderVisible="true" borderWeight="0"
					   cornerRadius="14" dropShadowVisible="true" top="100"
					   styleName="gradientBackground"
					    horizontalCenter="30">
		
		<s:backgroundFill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="#FFFFFF"/>
				<s:GradientEntry color="{finalPerformanceColor}"/>
			</s:LinearGradient>
		</s:backgroundFill>
		
		<s:RichText id="performanceLabel"
				 color="#145F78" fontFamily="Verdana" fontSize="16" fontStyle="normal"
				 fontWeight="bold" textAlign="center" textDecoration="none"
				 verticalAlign="middle" horizontalCenter="0" verticalCenter="-10"/>
		
		<mx:LinkButton visible="{performanceLevel != 1}" right="10" bottom="5"
					   label="How can I improve it?"
					   click="dispatchEvent(new Event('performanceImproveLinkClicked'))"
					   color="#F7F9FA" cornerRadius="5" fontSize="13" fontStyle="normal"
					   fontWeight="bold" styleName="index"/>

	</s:BorderContainer>
	
	<s:Image id="performanceIconHigh" visible="{performanceLevel == 1}" left="20" width="60"
			 height="60" horizontalCenter="30" scaleMode="stretch" smooth="true"
			 smoothingQuality="high" source="@Embed('assets/assetsMCQModule/thumbsUp.png')" verticalCenter="0"/>
	
	<s:Image id="performanceIconAverage" left="20" width="60" height="60" 
			 scaleMode="stretch" smoothingQuality="high"
			 smooth="true"
			 source="@Embed('assets/assetsMCQModule/thumbsOk.png')"
			 visible="{performanceLevel == 2}"
			 horizontalCenter="30" verticalCenter="0"
			 />
	<s:Image id="performanceIconDown" left="20" width="60" height="60" 
			 scaleMode="stretch" smoothingQuality="high"
			 smooth="true"
			 source="@Embed('assets/assetsMCQModule/thumbsDown.png')"
			 visible="{performanceLevel == 3}"
			 horizontalCenter="30" verticalCenter="0"
			 />
	
	<mx:LinkButton styleName="URL" label="Open Report Card" click="dispatchEvent(new Event('nextPageClicked'))"  
				   bottom="30" right="20" color="#C4B8B5" fontSize="15" 
				   fontStyle="italic" textDecoration="none"/>
	
	<s:Label top="40" color="#FCFAFA" fontFamily="Verdana" fontSize="20" fontStyle="normal"
			 fontWeight="bold" horizontalCenter="30" text="Mark Sheet" textAlign="center"
			 verticalAlign="middle"/>

</s:Group>
