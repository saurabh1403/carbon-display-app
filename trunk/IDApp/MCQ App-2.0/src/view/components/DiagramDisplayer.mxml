<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   xmlns:mx="library://ns.adobe.com/flex/mx"
				   backgroundAlpha="1.0" dropShadowVisible="true">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import Controller.MCQConstants;
			
			import mx.managers.PopUpManager;
			
			private var _imagePath:String = "";
			public function setImage(imagePath:String):void
			{
				_imagePath = imagePath;
				diagImage.source = imagePath;
			}
			
			protected function diagImage_clickHandler(event:MouseEvent):void
			{
				var newEvent:Event = new Event(MCQConstants.diagramClickEventName);
				dispatchEvent(newEvent);
			}
			
		]]>
	</fx:Script>
	
	
	<s:Image id="diagImage" width="90%" height="90%" backgroundAlpha="0.0" backgroundColor="#FFFDFD"
			 chromeColor="#F5B8B8" click="diagImage_clickHandler(event)" horizontalCenter="0"
			 scaleMode="stretch" smooth="true" smoothingQuality="high" verticalCenter="0"
			 />
</s:BorderContainer>
