<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true"
				implements="mx.controls.listClasses.IListItemRenderer"
				width="100%" height="100%"
				mouseOver="itemrenderer1_mouseOverHandler(event)"
				mouseOut="itemrenderer1_mouseOutHandler(event)" xmlns:widgets="com.Tutorial.view.widgets.*"
				>
	<fx:Script>
		<![CDATA[
			import mx.controls.listClasses.IListItemRenderer;
			import mx.events.FlexEvent;
			
			[Bindable]
			[Embed(source="/assets/images/mainChapterImages/cover1.png")]
			private var chapterImage:Class;


			protected function itemrenderer1_mouseOverHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				titleText.setStyle("color", 0x000000);
			}


			protected function itemrenderer1_mouseOutHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				titleText.setStyle("color", 0xffffff);
			}

		]]>
	</fx:Script>
	<s:layout>
		<s:BasicLayout/>
	</s:layout>
	
	
		<!--<mx:Image source="{data.mainIconPath}"/>-->
	
	<mx:VBox width="100%" height="100%">
		<mx:Spacer height="100%"/>
		<mx:HBox width="100%" height="100%">
			<mx:Spacer width="5%"/>
			<s:Image id="chapImage"
					  source="{chapterImage}"
					  verticalAlign="middle"
					  width="128" height="128"
					  left="10" top="30" bottom="30"
					  smoothingQuality="high"
					  smooth="true"
					  scaleMode="stretch"
					  />

		<!--horizontalAlign="center" -->
		</mx:HBox>
		<mx:Spacer height="100%"/>
	</mx:VBox>
	<widgets:MultilineTextComponent id="titleText"
			y="{chapImage.y + chapImage.height/5}"
			styleName="titleHeader"
			text="{data.title}"
			tabFocusEnabled="false" selectable="false"
			color="0xffffff"
			fontSize="16"
			width="100%"
			/>
		
