<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100%" height="100%"
		 creationCompleteEffect="Fade"
		 hide="processHide()"
		 creationComplete="onCreationComplete()"
		 tabEnabled="false" xmlns:widgets="com.Tutorial.view.widgets.*">
		
	<fx:Script>
		<![CDATA[
			
			[Bindable] public var fadeOutStarted:Boolean = false;
			
			private function onCreationComplete():void
			{
				
			}
			
			private function processHide():void
			{
				// switches boolean to true to let parent know this is the correct effect to handle
				fadeOutStarted = true;
				this.setStyle("hideEffect", fadeOut);
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<s:Fade id="fadeOut" />
	</fx:Declarations>
	
	<mx:VBox width="100%" height="100%" verticalAlign="middle" horizontalAlign="center">
		<widgets:SpinningProgressIndicator width="100%" height="100%" id="spinner" creationComplete="{spinner.startTimer();}" /> 		
	</mx:VBox>
</mx:VBox>
