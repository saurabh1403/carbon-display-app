<?xml version="1.0" encoding="utf-8"?>
<s:SkinnableContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
					  xmlns:s="library://ns.adobe.com/flex/spark" 
					  width="100%" height="100%"
					  xmlns:mx="library://ns.adobe.com/flex/mx"
					  skinClass="VideoPlayerOptionsPanelSkin"
					  creationComplete="skinnablecontainer1_creationCompleteHandler(event)"
					>
	
	<fx:Declarations>
	</fx:Declarations>
	
	<fx:Metadata>
		[Event(name="itemClickedEvent", type="Events.VideoOptionsClickEvent")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import Events.GenericEvent;
			import Events.VideoOptionsClickEvent;
			
			import mx.events.FlexEvent;
			import mx.graphics.GradientEntry;
			
			public const lightGradientColor:Array = new Array(new GradientEntry(0x7D7A7B), new GradientEntry(0x6E6B6C));
			public const darkGradientColor:Array = new Array(new GradientEntry(0xFFD462), new GradientEntry(0xFC7D49));

			protected function VideoOptionsPanelClicked(event:Event):void
			{
				var e:VideoOptionsClickEvent = new VideoOptionsClickEvent('itemClickedEvent');
				e.eventTypeName = "OpenButton";
				dispatchEvent(e);

			}
			
			protected function skinnablecontainer1_creationCompleteHandler(event:FlexEvent):void
			{
				this.skin.addEventListener("openButtonClicked", VideoOptionsPanelClicked, false, 0, true);
				
			}

			protected function optionsButtonClicked(event:MouseEvent):void
			{
				var newev:VideoOptionsClickEvent = new VideoOptionsClickEvent("itemClickedEvent");
				
				switch(event.target.id.toString())
				{
					
					case "printButton":
					{
						newev.eventTypeName = "print";
						break;
					}
						
					case "askButton":
					{
						newev.eventTypeName = "askExperts";
						break;
					}
					
					case "tellFriendButton":
					{
						newev.eventTypeName = "tellFriend";
						break;
					}
						
					default:
					{
						break;
					}
				}
				dispatchEvent(newev);
			}
			
			protected function onStateChange(event:FlexEvent):void
			{
				switch(currentState)
				{
					case "Collapsed":
					{
						(this.skin as VideoPlayerOptionsPanelSkin).gradColor.entries = lightGradientColor;
						break;
					}
						
					case "Expanded":
					default:
					{
						(this.skin as VideoPlayerOptionsPanelSkin).gradColor.entries = darkGradientColor;
						break;
					}
				}
			}
			
		]]>
	</fx:Script>
	
	
	<s:states>
		<s:State name="Collapsed" enterState="onStateChange(event)"/>
		<s:State name="Expanded" enterState="onStateChange(event)"/>
	</s:states>
	
	<!--Add the content of your sliding panel here  -->
	
	<s:HGroup top="5" width="100%">
		<s:Spacer width="100%"/>
			<s:Button width="90" height="90"
					  id="printButton"
					  skinClass="customIconButtonSkin"
					  icon="@Embed('assets/print.png')"
					  toolTip="Print Page"
					  useHandCursor="true"
					  buttonMode="true"
					  mouseChildren="false"
					  includeIn="Expanded"
					  click="optionsButtonClicked(event)"
					  />
		<s:Spacer width="100%"/>

		<s:Button width="90" height="90"
				  id="tellFriendButton"
				  skinClass="customIconButtonSkin"
				  icon="@Embed('assets/tell.png')"
				  toolTip="Tell a friend"
				  useHandCursor="true"
				  buttonMode="true"
				  mouseChildren="false"
				  includeIn="Expanded"
				  click="optionsButtonClicked(event)"
				  />
		<s:Spacer width="100%"/>

		<s:Button width="90" height="90"
				  id="askButton"
				  skinClass="customIconButtonSkin"
				  icon="@Embed('assets/ask.png')"
				  toolTip="Ask your doubts"
				  useHandCursor="true"
				  buttonMode="true"
				  mouseChildren="false"
				  includeIn="Expanded"
				  click="optionsButtonClicked(event)"
				  />
			<s:Spacer width="100%"/>
			
		<s:Spacer width="10%"/>
	</s:HGroup>
	
	<s:Button id="openButton" right="35" bottom="0" width="40" height="40" label="Open"
			  click="VideoOptionsPanelClicked(event)"
			  skinClass="TransparentRoundButtonSkin"
			  icon.Collapsed='assets/downArrow.png'
			  label.Expanded="Close" icon.Expanded="assets/upArrow.png"/>
	
</s:SkinnableContainer>
