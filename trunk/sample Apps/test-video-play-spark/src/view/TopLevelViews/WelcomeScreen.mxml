<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import Events.GenericEvent;
			
			import model.VideoPlayConstants;
			
			//it will throw the event with data = "maths" or "science" and then the data will be populated from the corresponding xml
		
			protected function startButtonClicked(event:MouseEvent):void
			{
				var newEv:GenericEvent = new GenericEvent(VideoPlayConstants.subjectSelectionEvent);
				newEv.eventData.subjectName = "maths";
				dispatchEvent(newEv);
				
			}
			
		]]>
	</fx:Script>
	<s:Button x="440" y="186" label="Start"
			  click="startButtonClicked(event)"
			  />
	
	
</s:Group>
