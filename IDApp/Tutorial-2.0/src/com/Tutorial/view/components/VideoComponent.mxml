<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100%" height="100%"
		 creationPolicy="auto">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import org.osmf.events.MediaPlayerStateChangeEvent;
			import org.osmf.media.MediaPlayerState;
			
			[Bindable] public var flvVideoSrcFile:String = "";
			[Bindable] public var swfVideoSrcFile:String = "";
			[Bindable] public var pdfSrcFile:String = "";
			[Bindable] public var htmlSrcFile:String = "";
			
			//[Bindable] public var videoSrcObject:Object = new Object;

			protected function vidPlayer_mediaPlayerStateChangeHandler(event:MediaPlayerStateChangeEvent):void
			{
				if(event.state == MediaPlayerState.READY)
				{
					vidPlayer.videoObject.smoothing = true;
					vidPlayer.videoObject.deblocking = 0;
				}
			}
			
		]]>
	</fx:Script>
	
	<!--<s:VideoPlayer width="100%" height="100%"
				   source="{videoSrcObject.flvVideoSrcFile}"
				   visible="{videoSrcObject.flvVideoSrcFile != ''}" includeInLayout="{videoSrcObject.flvVideoSrcFile != ''}"
				   />
	<mx:SWFLoader width="100%" height="100%"
				  source="{videoSrcObject.swfVideoSrcFile}"
				  visible="{videoSrcObject.swfVideoSrcFile != ''}" includeInLayout="{videoSrcObject.swfVideoSrcFile != ''}"
				  />
	<mx:HTML width="100%" height="100%"
			 visible="{videoSrcObject.htmlSrcFile != ''}" includeInLayout="{videoSrcObject.htmlSrcFile != ''}"
			 />-->
	<s:VideoPlayer id="vidPlayer" width="100%" height="100%"
				   source="{flvVideoSrcFile}"
				   visible="{flvVideoSrcFile != ''}" includeInLayout="{flvVideoSrcFile != ''}"
				   mediaPlayerStateChange="vidPlayer_mediaPlayerStateChangeHandler(event)"
				   scaleMode="stretch"
				   />
	<mx:SWFLoader width="800" height="600"
				  source="{swfVideoSrcFile}"
				  visible="{swfVideoSrcFile != ''}" includeInLayout="{swfVideoSrcFile != ''}"
				  />
	<mx:HTML width="100%" height="100%"
			 visible="{htmlSrcFile != ''}" includeInLayout="{htmlSrcFile != ''}"
			 />
</mx:VBox>
