<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true"
				implements="mx.controls.listClasses.IListItemRenderer"
				width="100%" height="100%"
				mouseOut="itemrenderer1_mouseOutHandler(event)"
				mouseOver="itemrenderer1_mouseOverHandler(event)" xmlns:widgets="com.Tutorial.view.widgets.*"
				>

	<fx:Script>
		<![CDATA[
			import com.Tutorial.business.TutRenderingConstants;
			
			//This is the item renderer which has an icon and the description besides it.
			protected function itemrenderer1_mouseOutHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				titleText.setStyle("color", 0xffffff);
			}

			protected function itemrenderer1_mouseOverHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				titleText.setStyle("color", 0x000000);
			}

		]]>
	</fx:Script>

	<s:layout>
		<s:HorizontalLayout
			horizontalAlign="left"
			verticalAlign="top"/>
	</s:layout>
	
	<s:VGroup visible="{(data.icon1 as String).length != 0}"
			  width="{TutRenderingConstants.iconWidth}" height="{TutRenderingConstants.iconWidth}"
			  chromeColor="#90D285" horizontalAlign="left"
			  includeInLayout="{(data.icon1 as String).length != 0}">
		<mx:Spacer height="5%"/>
		<s:Image id="chapImage" left="3" top="3" bottom="3" width="100%" height="90%" smooth="true"
				 smoothingQuality="high" source="{data.icon1}" verticalAlign="middle" visible="{data.icon1 != ''}"/>
		<mx:Spacer height="5%"/>
	</s:VGroup>
	
	<s:VGroup width="100%" height="{TutRenderingConstants.iconWidth}"
			  horizontalAlign="left" horizontalCenter="0"
			  textAlign="left">
		<s:Spacer height="10%"/>
		<widgets:MultilineTextComponent id="titleText"
										height="80%"
										styleName="titleHeader"
										text="{data.name}"
										tabFocusEnabled="false" selectable="false"
										color="0xffffff"
										fontSize="16"
										width="100%"
										
										/>
		<s:Spacer height="10%"/>
	</s:VGroup>
	<!--<mx:HBox width="100%" height="100%"
	paddingLeft="10" paddingTop="10" paddingRight="10" paddingBottom="10">
	<mx:Image width="64" height="64"
				  source="{data.icon}"/>
		<s:Label width="100%" text="{data.name}" color="0xFFFFFF" />
	</mx:HBox>	-->
	
</s:ItemRenderer>
