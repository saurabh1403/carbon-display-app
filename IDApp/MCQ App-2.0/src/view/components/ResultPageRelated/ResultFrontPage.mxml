<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%">

	<fx:Metadata>
		[Event(name="nextPageClicked", type="flash.events.Event")]
		[Event(name="performanceImproveLinkClicked", type="flash.events.Event")]
	</fx:Metadata>

	<fx:Script>
		<![CDATA[
			[Bindable]
			public var performanceLevel:int = 2;		//1: high, 2: avergae, 3: low 
		]]>
	</fx:Script>
	
	<s:Image 
		width="100%"
		height="100%"
		source="@Embed('assets/Book-Cover.jpg')"
			 scaleMode="stretch"
			 >
	</s:Image>
	
	<s:BorderContainer id="performanceBar" width="75%" height="5%"
					   backgroundColor="#F85652"
					   borderVisible="true" borderWeight="0"
					   cornerRadius="14" dropShadowVisible="true" top="100"
					   styleName="gradientBackground"
					    horizontalCenter="30">
		<s:RichText id="performanceLabel"
				 color="#FEFEFE" fontFamily="Verdana" fontSize="16" fontStyle="normal"
				 fontWeight="bold" textAlign="center" textDecoration="none"
				 verticalAlign="middle" horizontalCenter="0" verticalCenter="-10"/>
		
		<mx:LinkButton label="How can I improve it?" bottom="5" right="10" 
					   color="#A6D3EA"
					   visible="{performanceLevel != 1}"
					   click="dispatchEvent(new Event('performanceImproveLinkClicked'))"
					    fontWeight="bold" fontStyle="normal"
						styleName="index"
						/>

	</s:BorderContainer>
	
	<s:Image id="performanceIconHigh" width="60" height="60"
			 scaleMode="stretch" smoothingQuality="high"
			 smooth="true"
			 source="@Embed('assets/thumbsUp.png')"
			 visible="{performanceLevel == 1}"
			 horizontalCenter="30" verticalCenter="0"/>
	
	<s:Image id="performanceIconAverage" left="20" width="60" height="60" 
			 scaleMode="stretch" smoothingQuality="high"
			 smooth="true"
			 source="@Embed('assets/thumbsOk.png')"
			 visible="{performanceLevel == 2}"
			 horizontalCenter="30" verticalCenter="0"
			 />
	<s:Image id="performanceIconDown" left="20" width="60" height="60" 
			 scaleMode="stretch" smoothingQuality="high"
			 smooth="true"
			 source="@Embed('assets/thumbsDown.png')"
			 visible="{performanceLevel == 3}"
			 horizontalCenter="30" verticalCenter="0"
			 />
	
	<mx:LinkButton styleName="URL" label="Open Report Card" click="dispatchEvent(new Event('nextPageClicked'))"  bottom="30" right="20" color="#C4B8B5" fontSize="15" fontStyle="italic" textDecoration="none"/>
	<s:Label text="Mark Sheet" horizontalCenter="30" top="40" fontSize="22" fontStyle="italic" fontWeight="bold" textAlign="center" verticalAlign="middle"/>

</s:Group>
