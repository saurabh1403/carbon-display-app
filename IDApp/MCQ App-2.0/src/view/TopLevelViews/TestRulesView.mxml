<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   xmlns:mx="library://ns.adobe.com/flex/mx"
				   width="100%" height="100%" backgroundColor="#FFFFFF" borderWeight="4"
				   chromeColor="#E46C6C" contentBackgroundColor="#FBFBFB"
				   creationComplete="bordercontainer1_initializeHandler(event)"
				   creationPolicy="all" borderVisible="true">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import Controller.DataProcessor;
			import Controller.MCQConstants;
	
			import model.QuestionsProxy;
			
			import mx.events.FlexEvent;
			
			import skins.TransparentButtonSkin;
			
			public function pickTest(testNumber:int):void
			{
				
			}
			
			public function resetView():void
			{
				var quesProxy:QuestionsProxy = DataProcessor.instance.quesProxy;
				
				testInstructions.text = "1. All questions are compulsory.\n\n" +
					"2. This paper consists of " + quesProxy.totalQuestions.toString() + " questions\n\n" +
					"3. No questions will be allowed after the time out.\n";
				
				
				timeLabel.text = "Total Time : " + quesProxy.testTotalTime.toString() + " min";
				marksLabel.text = "Total Marks : " + quesProxy.testTotalMarks.toString();
				
				mainPanel.title = quesProxy.testSubjectName;
				testLabel.text = quesProxy.testTitle;
				
			}
			
			protected function bordercontainer1_initializeHandler(event:FlexEvent):void
			{
				resetView();
			}
			
			
			protected function testStartClicked(event:Event):void
			{
				var newEvent:Event = new Event(MCQConstants.testViewStartEventName);
				dispatchEvent(newEvent);
				
			}
			
			public function disposeView():void
			{
				
			}
			
			
			protected function testQuitClicked(event:Event):void
			{
				var newEvent:Event = new Event(MCQConstants.testQuitEventName);
				dispatchEvent(newEvent);
			}
			
			
		]]>
	</fx:Script>
	
	<s:Image 
		width="100%"
		height="100%"
		smooth="true"
		smoothingQuality="high"
		source="@Embed('assets/exp.png')"
		scaleMode="stretch"
		/>

	<s:Panel id="mainPanel"
			 width="75%" height="55%" backgroundAlpha="1.0"
			 borderColor="#6A6464" borderVisible="true" chromeColor="#020202"
			 contentBackgroundAlpha="1.0" contentBackgroundColor="#D83E3E" cornerRadius="19"
			 dropShadowVisible="true" horizontalCenter="0" verticalCenter="22"
			 title="hello world"
			 fontSize="14" fontFamily="Arial" 
			 fontWeight="normal" fontStyle="normal" 
			 textDecoration="none" textAlign="center" skinClass="skins.TestRulesPanelSkin"
			 >
		
		<s:VGroup width="100%" height="100%" horizontalAlign="center">
			
			<s:Spacer height="15"/>
			<s:HGroup width="100%">
				
				<s:Spacer width="20"/>
				<s:Label id="timeLabel" left="30" top="10" width="119" height="22" color="#000000" fontSize="12"
						 fontWeight="bold" textAlign="left"
						 verticalAlign="middle"/>
				<s:Spacer width="100%"/>
				
				<s:Label id="testLabel" top="10" width="243" height="23" color="#000000" fontSize="14"
						 fontStyle="italic" fontWeight="bold" horizontalCenter="-1" textAlign="center"
						 verticalAlign="middle"/>
				<s:Spacer width="100%"/>
				<s:Label id="marksLabel" right="30" top="10" width="119" height="22" color="#000000" fontSize="12"
						 fontWeight="bold" textAlign="left"
						 verticalAlign="middle"/>
				<s:Spacer width="20"/>
			</s:HGroup>
			
			<s:Spacer height="20"/>
			
			<s:HGroup width="100%">
				<s:Spacer width="20"/>
				
				<s:RichText id="testInstructions" width="100%" color="#000000" fontSize="14"
							fontStyle="italic" textAlign="left"/>
			</s:HGroup>
			
			<s:Spacer height="100%"/>
			
			<s:HGroup width="100%" horizontalAlign="center">
				
				<s:Button bottom="30" width="43" height="43" label="Start" click="testStartClicked(event)"
						  color="#DF5050" fontFamily="Verdana" fontSize="23" fontStyle="italic"
						  fontWeight="bold" horizontalCenter="-50" icon="@Embed('assets/Ok-icon.png')"
						  textDecoration="none"
						  chromeColor="#3AB83D"
						  skinClass="skins.TransparentButtonSkin"
						  useHandCursor="true"
						  buttonMode="true"
						  mouseChildren="false"
						  />
				
				<s:Spacer width="40"/>
				
				<s:Button bottom="30" width="43" height="43" label="Quit" click="testQuitClicked(event)"
						  color="#DF5050" fontFamily="Verdana" fontSize="23" fontStyle="italic"
						  fontWeight="bold" horizontalCenter="50" icon="@Embed('assets/Quit-icon.png')"
						  textDecoration="none"
						  chromeColor="#D5AEAE"
						  skinClass="skins.TransparentButtonSkin"
						  useHandCursor="true"
						  buttonMode="true"
						  mouseChildren="false"
						  />
				
			</s:HGroup>

			<s:Spacer height="15"/>

		</s:VGroup>

	</s:Panel>

</s:BorderContainer>
